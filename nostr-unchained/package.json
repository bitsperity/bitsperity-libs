{
  "name": "nostr-unchained",
  "version": "0.1.0",
  "type": "module",
  "description": "TypeScript-first Nostr DM library fÃ¼r SvelteKit - Foundation Layer",
  "keywords": [
    "nostr",
    "svelte",
    "sveltekit",
    "typescript",
    "dm",
    "messaging",
    "nip-17",
    "nip-44"
  ],
  "author": "",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./crypto": {
      "import": "./dist/crypto.js",
      "require": "./dist/crypto.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "benchmark": "node benchmarks/index.js",
    "size-check": "bundlewatch --config bundlewatch.config.js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^0.34.0",
    "bundlewatch": "^0.3.0",
    "c8": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-svelte": "^2.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^4.0.0",
    "terser": "^5.43.1",
    "typescript": "^5.0.0",
    "vite": "^4.5.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "reconnecting-websocket": "^4.4.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^1.0.0",
    "svelte": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitsperity/nostr-unchained.git"
  },
  "bugs": {
    "url": "https://github.com/bitsperity/nostr-unchained/issues"
  },
  "homepage": "https://github.com/bitsperity/nostr-unchained#readme"
}
