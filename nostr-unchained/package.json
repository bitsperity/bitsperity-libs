{
  "name": "nostr-unchained",
  "version": "0.1.0",
  "type": "module",
  "description": "TypeScript-first Nostr DM library fÃ¼r SvelteKit - Foundation Layer",
  "keywords": [
    "nostr",
    "svelte",
    "sveltekit",
    "typescript",
    "dm",
    "messaging",
    "nip-17",
    "nip-44"
  ],
  "author": "",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./crypto": {
      "import": "./dist/crypto.js",
      "require": "./dist/crypto.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite dev",
    "dev:crypto": "concurrently \"npm run build:crypto:watch\" \"npm run test:crypto:watch\"",
    "dev:phase3": "concurrently \"npm run build:phase3:watch\" \"npm run test:phase3:watch\"",
    "build": "tsc && vite build",
    "build:crypto": "tsc -p tsconfig.crypto.json",
    "build:crypto:watch": "tsc -p tsconfig.crypto.json --watch",
    "build:phase3": "tsc -p tsconfig.phase3.json",
    "build:phase3:watch": "tsc -p tsconfig.phase3.json --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:phase2": "vitest --config vitest.phase2.config.ts",
    "test:phase2:run": "vitest run --config vitest.phase2.config.ts",
    "test:phase2:coverage": "vitest run --coverage --config vitest.phase2.config.ts",
    "test:phase2:ui": "vitest --ui --config vitest.phase2.config.ts",
    "test:phase3": "vitest --config vitest.phase3.config.ts",
    "test:phase3:run": "vitest run --config vitest.phase3.config.ts",
    "test:phase3:watch": "vitest --config vitest.phase3.config.ts",
    "test:phase3:coverage": "vitest run --coverage --config vitest.phase3.config.ts",
    "test:phase3:ui": "vitest --ui --config vitest.phase3.config.ts",
    "test:cross-tab": "MULTI_TAB_TEST=true vitest run src/__tests__/phase3/cross-tab-sync.test.ts",
    "test:cross-tab:watch": "MULTI_TAB_TEST=true vitest src/__tests__/phase3/cross-tab-sync.test.ts",
    "test:stores": "vitest run src/__tests__/phase3/dm-conversation-store.test.ts",
    "test:stores:watch": "vitest src/__tests__/phase3/dm-conversation-store.test.ts",
    "test:ssr": "SSR_TEST=true vitest run src/__tests__/phase3/ssr-compatibility.test.ts",
    "test:ssr:watch": "SSR_TEST=true vitest src/__tests__/phase3/ssr-compatibility.test.ts",
    "test:health:stores": "vitest run src/__tests__/phase3/store-health.test.ts",
    "test:umbrel": "UMBREL_RELAY=ws://umbrel.local:4848 vitest run src/__tests__/phase2-relay.test.ts",
    "test:crypto": "vitest run --config vitest.crypto.config.ts",
    "test:crypto:watch": "vitest --config vitest.crypto.config.ts",
    "test:crypto:coverage": "vitest run --coverage --config vitest.crypto.config.ts",
    "test:nip44:compliance": "node scripts/nip44-compliance-test.js",
    "test:nip44:vectors": "node scripts/test-vector-validation.js",
    "benchmark": "node benchmarks/index.js",
    "benchmark:crypto": "vitest bench --config vitest.crypto.config.ts",
    "benchmark:crypto:compare": "node scripts/benchmark-comparison.js",
    "audit:crypto": "npm audit && snyk test || true",
    "audit:crypto:full": "npm run audit:crypto && npm run security:scan",
    "security:scan": "node scripts/security-scan.js",
    "monitor:relay:umbrel": "node scripts/monitor-umbrel-relay.js",
    "serve:test-tab1": "PORT=8080 npm run dev",
    "serve:test-tab2": "PORT=8081 npm run dev",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "lint:crypto": "eslint src/crypto --ext .ts,.js",
    "type-check": "tsc --noEmit",
    "typecheck:crypto": "tsc -p tsconfig.crypto.json --noEmit",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "size-check": "bundlewatch --config bundlewatch.config.js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^0.34.0",
    "bundlewatch": "^0.3.0",
    "c8": "^8.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-svelte": "^2.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^4.0.0",
    "snyk": "^1.1200.0",
    "terser": "^5.43.1",
    "typescript": "^5.0.0",
    "vite": "^4.5.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "@noble/ciphers": "^0.4.1",
    "@noble/hashes": "^1.3.3",
    "@noble/secp256k1": "^2.0.0",
    "reconnecting-websocket": "^4.4.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^1.0.0",
    "svelte": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitsperity/nostr-unchained.git"
  },
  "bugs": {
    "url": "https://github.com/bitsperity/nostr-unchained/issues"
  },
  "homepage": "https://github.com/bitsperity/nostr-unchained#readme"
}
