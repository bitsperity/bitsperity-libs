{
  "name": "nostr-unchained",
  "version": "0.1.0",
  "description": "SQL-ähnliche Eleganz für dezentralisierte Event-Graphen - Nostr richtig gemacht für alle",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dm": {
      "import": "./dist/dm/index.js",
      "types": "./dist/dm/index.d.ts"
    },
    "./events": {
      "import": "./dist/events/index.js",
      "types": "./dist/events/index.d.ts"
    },
    "./query": {
      "import": "./dist/query/index.js",
      "types": "./dist/query/index.d.ts"
    }
  },
  "scripts": {
    "test": "vitest",
    "test:v2": "vitest run --config vitest.v2.config.ts",
    "test:infrastructure": "vitest run --config vitest.infrastructure.config.ts",
    "test:setup-vitest": "vitest --version && npm run test:infrastructure",
    "test:coverage-setup": "vitest run --coverage --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:relay:start": "./scripts/test-relay.sh start",
    "test:relay:stop": "./scripts/test-relay.sh stop",
    "test:relay:status": "./scripts/test-relay.sh status",
    "test:with-relay": "./scripts/test-relay.sh start && npm test && ./scripts/test-relay.sh stop",
    "test:v2:with-relay": "./scripts/test-relay.sh start && npm run test:v2 && ./scripts/test-relay.sh stop",
    "build": "vite build",
    "build:types": "tsc --noEmit",
    "dev": "vite build --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "validate:all": "npm run lint && npm run build:types && npm run test:coverage-setup"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.0",
    "@vitest/ui": "^3.2.0",
    "eslint": "^8.57.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.0"
  },
  "dependencies": {
    "@noble/ciphers": "^1.3.0",
    "@noble/hashes": "^1.8.0",
    "@noble/secp256k1": "^1.7.1",
    "@scure/base": "^1.2.6",
    "@types/ws": "^8.18.1",
    "ws": "^8.18.3"
  },
  "keywords": [
    "nostr",
    "decentralized",
    "social",
    "typescript",
    "reactive",
    "svelte",
    "sql-like",
    "subgraph",
    "events"
  ],
  "author": "Bitsperity",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitsperity/nostr-unchained"
  }
}
